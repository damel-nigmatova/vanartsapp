        background-image: url('https://images.pexels.com/photos/6740778/pexels-photo-6740778.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');
        background-position: right top;
        background-size: cover;
        background-repeat: no-repeat;
        padding: 1% 5%;
    }
    label{
        color: white;
        display: inline-block;
