<style>
    body{
        overflow-y: hidden;
    }
    .customer-img{
        width: 50px;
    }
    h1{
        font-family: 'Roboto Mono', monospace;
        margin: 30px 0px;
    }
    .btn-1{
        color: white;
        background-color: orange;
        border: 0px;
        margin: 20px 0px;
        padding: 7px 20px;
    }
    .btn-1:hover, .btn-2:hover{
